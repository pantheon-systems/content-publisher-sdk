{
  "name": "@pantheon-systems/next-pcc-starter",
  "version": "1.0.0",
  "private": true,
  "license": "GPL-3.0-or-later",
  "description": "A starter for building a Pantheon Content Cloud (PCC) powered site with Next.js",
  "homepage": "https://pcc.pantheon.io/docs",
  "repository": "https://github.com/pantheon-systems/pantheon-content-cloud-sdk/tree/main/starters/nextjs-starter",
  "bugs": "https://github.com/pantheon-systems/pantheon-content-cloud-sdk/issues",
  "author": "@pantheon-systems",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build && cp -r .next/static .next/standalone/.next && cp -r public .next/standalone",
    "start": "node .next/standalone/server.js",
    "build:mono": "next build",
    "start:mono": "next start",
    "lint": "next lint",
    "prettier": "prettier \"**/*.{js,jsx,md}\" --check --ignore-path .prettierignore",
    "prettier:fix": "prettier \"**/*.{js,jsx,,md}\" --write --ignore-path .prettierignore",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:playwright": "pnpm exec playwright test",
    "update-snapshots": "vitest run --update --silent",
    "coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@pantheon-systems/pcc-react-sdk": "~4.0.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@tailwindcss/typography": "0.5.10",
    "class-variance-authority": "^0.7.0",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "next": "^14.2.28",
    "next-seo": "^5.15.0",
    "query-string": "^8.2.0",
    "react-hot-toast": "^2.5.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^5.4.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-loading-skeleton": "^3.4.0",
    "react-markdown": "^8.0.7",
    "react-remove-scroll": "^2.5.10",
    "react-responsive": "^10.0.0",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/react": "13.4.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.35",
    "prettier": "3.2.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.4",
    "vite": "^6.1.1",
    "vitest": "^1.6.1",
    "vitest-fetch-mock": "^0.2.2"
  }
}
